<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10sp">

    <TextView
        android:id="@+id/list_item_medication_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="name">

    </TextView>
    <TextView
        android:id="@+id/list_item_medication_dosage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_item_medication_name"
        android:paddingLeft="4dp"
        android:textSize="14sp"

        tools:text="dosage">

    </TextView>

    <TextView
        android:id="@+id/list_item_medication_application"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_toRightOf="@id/list_item_medication_dosage"
        android:paddingLeft="4dp"
        tools:text="app">
    </TextView>

    <TextView
        android:id="@+id/list_item_medication_verschreiber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_below="@id/list_item_medication_name"
        tools:text="verschreiber">
    </TextView>

    <TextView
        android:id="@+id/list_item_medication_hinweise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/list_item_medication_verschreiber"
        tools:text="hinweise">

    </TextView>


</RelativeLayout>